<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/CSS/Main-Page.css">
    <link rel="icon" type="image/x-icon" href="/images/book.png">
    <title>Main Page</title>
</head>
<body>
    <h1 class="Book_Store_Title"><img class="header_img"src="/images/header-book.png" alt="book img">Welcome to Book Store <img class="header_img"src="/images/header-book.png" alt="book img"></a></h1>
    <nav>
        <div class="Public">
            <button class="Books-Button"onclick="Bookfunction()"><i class="public-icon bi bi-book"></i></button>
            <button class="Authors-Button"onclick="Authorfunction()"><i class="public-icon bi bi-pen"></i></button>
        </div>
    <% if(User){%>
        <div class="header-1">
        <a href="/authors"><i class="bi bi-pen"></i>Authors</a>
        <a href="/books"><i class="bi bi-book"></i>Books</a>
        <a href="/logout" method="get"><i class="bi bi-box-arrow-right"></i></a>
        </div>    
    <% }%>
    <% if(!User){%>
    <div class="header-2">    
    <a href="/register"><i class="bi bi-person-plus"></i>Register</a>
    <a href="/login"><i class="bi bi-box-arrow-right"></i>Login</a>
    </div>
    <% }%>
    </nav>
    <section class="Books">
        <%  if(Books){Books.forEach(Bookİnfo => { %>
            <% let id= Bookİnfo._id%>
            <div class="Bookİnfo">
            <h2 class="Book-Title"><%= Bookİnfo.Title %></h2>
            <div class="Book-image">
            <img src=<%=Bookİnfo.Bookİmage%> alt="Book İmage">
            </div>
            <div class="Book-İnformation">
            <p><p class="Book-info"><i class="bi bi-vector-pen"></i>  Book`s Author:   <strong><%= Bookİnfo.Author %></strong></p></p>
            <p><p class="Book-info"><i class="bi bi-tags"></i>  Book`s Price:      <strong style="color:rgb(0, 177, 0);"><%= Bookİnfo.Price %>$</strong></p></p>
            <p><p class="Book-info"><i class="bi bi-upc"></i>  Book`s ISBN:   <strong><%= Bookİnfo.Isbn %></strong></p></p>
            <p><p class="Book-info"><i class="bi bi-translate"></i>  Book`s Language:   <strong><%= Bookİnfo.Author %></strong></p></p>
            <p><p class="Book-info"><i class="bi bi-file-text"></i>  Book`s Number of Pages:   <strong><%= Bookİnfo.NumberOfPages %></strong></p></p>
            <p><p class="Book-info"><i class="bi bi-award"></i>  Book`s Publisher:   <strong><%= Bookİnfo.Publisher %></strong></p></p>
            <p class="Book-Creator-İnfo">This Book created by <strong class="Creator-Name""><%=Bookİnfo.CreatorName%></strong></p>
            </div>
            </div>
        <% })}%>  
        </section>
        <section class="Authors">
            <% if(Authors){Authors.forEach(Authorİnfo => { %>
                <% let id= Authorİnfo._id%>
                <div class="Authorİnfo">
                <h2 class="Author-Title"><%= Authorİnfo.NameOfAuthor %></h2>
                <div class="Author-image">
                <img src=<%=Authorİnfo.Authorİmage%> alt="Author İmage">
                </div>
                <p><p class="Author-info"><i class="bi bi-globe"></i> Author`s country:   <strong><%= Authorİnfo.CountryOfAuthor %></strong></p></p>
                <p><p class="Author-info two"><i class="bi bi-calendar2-date"></i> Author`s Birthdate:<br><strong><%= Authorİnfo.BirthDateOfAuthor %></strong></p></p>
                <p class="Author-Creator-İnfo">This Author created by <strong class="Creator-Name"><%=Authorİnfo.CreatorName%></strong></p>
            </div>
                
            <% })} %>  
            </section>

        <script>
            const Books = document.querySelector(".Books");
            const Authors = document.querySelector(".Authors");
            function Bookfunction(){
                if (Books.style.display = "none"){
                    Books.style.display = "flex"
                    Authors.style.display = "none"
                }
                }
            function Authorfunction(){
                if (Authors.style.display = "none"){
                    Authors.style.display = "flex"
                    Books.style.display = "none"
                }
              }
        </script>
</body>

</html>