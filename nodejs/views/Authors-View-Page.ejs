<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/CSS/Author-View-Page.css">
    <link rel="icon" type="image/x-icon" href="/images/book.png">
    <title>View Authors</title>
</head>
<body>
    <h4 class="Book_Store_Title"><img class="header_img"src="/images/header-book.png" alt="book img"><a href="/" style="text-decoration:none;color: azure;">Book Store</a> <img class="header_img"src="/images/header-book.png" alt="book img"></h4>
    <% if(Send){ %>
        <h3><%= Send %></h3> 
    <% } %>
    <div class="header">
        <div class="location">
        <a href="/"class="home"><i class="bi bi-house-door"></i></a>
        <a href="/authors/add"class="add" method="get"><i class="bi bi-plus-circle"></i></a>
        </div>
        <h1> <i class="bi bi-pen-fill"></i> Welcome to your Authors page <i class="bi bi-pen-fill"></i><br><p class="creator"><%= Creator %></p></h1>
        </div>
    <section class="Authors">
    <% if(Authors){Authors.forEach(Authorİnfo => { %>
        <% let id= Authorİnfo._id%>
        <div class="Authorİnfo">
        <h2 class="Author-Title"><%= Authorİnfo.NameOfAuthor %><a href="/authors/delete/:<%=id%>" method="get" style="color:white;"><i class="bi bi-x-circle-fill"></i></a></h2>
        <div class="Author-image">
        <img src=<%=`${Authorİnfo.Authorİmage}`%> alt="Author İmage">
        </div>
        <p><p class="Author-info"><i class="bi bi-globe"></i> Author`s country:   <strong><%= Authorİnfo.CountryOfAuthor %></strong></p></p>
        <p><p class="Author-info two"><i class="bi bi-calendar2-date"></i> Author`s Birthdate:<br><strong><%= Authorİnfo.BirthDateOfAuthor %></strong></p></p>
        <p class="Author-Creator-İnfo">This Author created by <strong class="Creator-Name"><%=Authorİnfo.CreatorName%></strong></p>
    </div>
        
    <% })} %>  
    </section>
    
</body>
</html>